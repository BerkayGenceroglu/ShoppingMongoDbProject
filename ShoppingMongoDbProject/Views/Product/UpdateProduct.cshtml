@model GetProductDto

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayoutt.cshtml";
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Paneli</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<h4 class="page-title">Ürün İşlemleri</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Ürün Güncelle</div>
            </div>
            <form method="post">
                <div class="card-body">
                    <input type="hidden" asp-for="ProductId" />
                    <div class="form-group">
                        <label>Ürün Adı</label>
                        <input type="text" class="form-control" asp-for="ProductName">
                    </div>
                    <div class="form-group">
                        <label>Ürün Adı</label>
                        <input type="text" class="form-control" asp-for="ImageUrls">
                    </div>
                    <div class="form-group">
                        <label>Cinsiyet</label>
                        <input type="text" class="form-control" asp-for="Gender">
                    </div>
                    <div class="form-group">
                        <label>Ürün Fiyatı</label>
                        <input type="text" class="form-control" asp-for="ProductPrice">
                    </div>
                    <div class="form-group">
                        <label>Stok Sayısı</label>
                        <input type="text" class="form-control" asp-for="StockCount">
                    </div>
                    <div class="form-group">
                        <label>Kategori</label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.v">
                            <option value=""> -- Kategori Seçiniz --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" rows="5" asp-for="Description"></textarea>
                    </div>
                </div>
                <div class="card-footer text-start">
                    <button class="btn btn-success">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

