@model CreateProductImageDto
@{
    ViewData["Title"] = "CreateProductImage";
    Layout = "~/Views/Shared/_AdminLayoutt.cshtml";
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Paneli</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<h4 class="page-title">Ürün Resmi İşlemleri</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Yeni Ürün Resmi Ekle</div>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label>Ürün</label>
                        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.v">
                            <option value=""> -- Ürün Seçiniz --</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Resim Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl">
                    </div>
                </div>
                <div class="card-footer text-start">
                    <button type="submit" class="btn btn-success">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>

