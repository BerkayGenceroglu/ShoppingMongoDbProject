@model List<ResultProductImageDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayoutt.cshtml";
    int count = 0;
}
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Paneli</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<h4 class="page-title">Ürün Resmi İşlemleri</h4>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">Ürün Resmi Listesi</div>
            </div>
            <div class="card-body">
                <div class="card-sub">
                    Aşağıda ürün resmi işlemlerini gerçekleştirebilirsiniz.
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Ürün</th>
                            <th scope="col">Resim Url</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.ProductName</td>
                                <td>@item.ImageUrl</td>
                                <td><a href="/ProductImage/DeleteProductImage/@item.ProductImageId" class="btn btn-danger">Sil</a></td>
                                <td><a href="/ProductImage/UpdateProductImage/@item.ProductImageId" class="btn btn-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/ProductImage/CreateProductImage" class="btn btn-info">Yeni Ürün Resmi Ekle</a>
            </div>
        </div>
    </div>
</div>

